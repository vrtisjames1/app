    <body>

        <div class="container-fluid">

                <!-- add new movie -->
                <a href="/new">
                    <button class="btn btn-primary">Add Person</button>
                </a>


            <h2>Secret Santa List</h2>
            <div id="table">
                <table class="table">
                 <%   for (let i = 0; i < profileIndex.length; i++) { %>

                        <tr id="lines">

                            <!-- Image display -->
                                <td id="Image">
                                    <img src=<%=profileIndex[i].image%>>
                                </td>

                            <!-- name and link -->
                            <td id="name">
                                <a href="/<%=profileIndex[i].id; %>">
                                    <%=profileIndex[i].name%>
                                </a>
                            </td>



                            <!-- funfact -->
                            <td id="funfact">
                                <p><b>Quote Known For:</b> "<%=profileIndex[i].funFact%>"</p>
                            </td>

                            <!-- Delete Person -->
                        <td>
                            <form action="/<%=profileIndex[i].id; %>?_method=DELETE" method="POST">
                                <input type="submit" value="DELETE" class="btn btn-danger btn-sm"/>
                            </form>
                        </td>


                        </tr>
                 <%   } %>

                </table>
        </div>
    </body>
</html>